<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="main.resources.GoodsEntity">
        <table name="goods" schema="public" catalog="postgres"/>
        <attributes>
            <id name="id">
                <column name="id" precision="10"/>
            </id>
            <basic name="productName">
                <column name="product_name" length="256"/>
            </basic>
            <basic name="price">
                <column name="price" precision="8"/>
            </basic>
            <basic name="amount">
                <column name="amount" precision="10"/>
            </basic>
            <basic name="description">
                <column name="description" length="1024"/>
            </basic>
            <basic name="image">
                <column name="image" nullable="false" length="256"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
